{% macro render(items, linkResolver) %}
<ul class="list-group list-group-flush">
    {% for item in items %}
        <li class="list-group-item">

            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <strong>{{ item.label }}</strong>
                    <div class="text-muted small">
                        {{ linkResolver.resolve(item) }}
                    </div>
                </div>

                <div class="d-flex gap-2">
<form method="post" action="/admin/menu-items/{{ item.id }}/update" class="row g-2 align-items-center">

  {{ csrf() }}

    <div class="col">
        <input
            name="label"
            class="form-control form-control-sm"
            value="{{ item.label }}"
        >
    </div>

    <div class="col">
        <input
            name="css_class"
            class="form-control form-control-sm"
            placeholder="CSS class"
            value="{{ item.cssClass }}"
        >
    </div>

    <div class="col">
        <select name="target" class="form-select form-select-sm">
            <option value="">â€”</option>
            <option value="_blank" {% if item.target == '_blank' %}selected{% endif %}>
                _blank
            </option>
        </select>
    </div>

    <div class="col-auto">
        <div class="form-check form-switch">
            <input
                class="form-check-input"
                type="checkbox"
                name="is_visible"
                {% if item.isVisible %}checked{% endif %}
            >
        </div>
    </div>

    <div class="col-auto">
        <button class="btn btn-sm btn-outline-primary">
            Opslaan
        </button>
    </div>

</form>

                </div>
            </div>

            {% if item.children %}
                <div class="ms-4 mt-2">
                    {{ _self.render(item.children, linkResolver) }}
                </div>
            {% endif %}
        </li>
    {% endfor %}
</ul>
{% endmacro %}

