{% extends "@core/auth/layout.twig" %}

{% block auth_content %}
<form id="2fa-form" method="post" action="/2fa">


    {{ csrf() }}

    <p class="text-muted small mb-3 text-center">
        Vul de 6-cijferige code in uit je authenticator app.
    </p>

    <div class="mb-3">
        <input
            type="text"
            name="code"
            class="form-control text-center fs-4"
            maxlength="6"
            inputmode="numeric"
            autocomplete="one-time-code"
            required
        >
    </div>

    <button class="btn btn-primary w-100">
        VerifiÃ«ren
    </button>
</form>
{% endblock %}


