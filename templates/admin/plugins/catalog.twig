{% extends "@core/admin/pages/layout.twig" %}

{% block content %}
<h1>Plugin Catalog</h1>

<p class="text-muted">
  Browse and install available Keystone plugins.
</p>

<div class="alert alert-success d-none"></div>
<div class="alert alert-danger d-none"></div>

<div class="row">
  {% for plugin in catalog %}
    {% set installedPlugin = installed[plugin.package] ?? null %}

    <div class="col-md-4">
      <div class="card mb-3 h-100">
        <div class="card-body">
          <h5 class="card-title">{{ plugin.name }}</h5>

          <span class="badge bg-warning">
        {{ plugin.version }} → {{ installed[plugin.slug].version }}
        </span>

          <p class="card-text">
            {{ plugin.description }}
          </p>

          <p class="text-muted mb-2">
            <small>
              {{ plugin.author ?? 'Community' }}
              · {{ plugin.category ?? 'general' }}
            </small>
          </p>
        </div>

        <div class="card-footer bg-light">
          {% if installedPlugin %}
            {% if installedPlugin.enabled %}
              <span class="badge bg-success">Enabled</span>
              <a href="/admin/plugins/{{ installedPlugin.name }}/disable"
                 class="btn btn-sm btn-outline-secondary float-end">
                Disable
              </a>
            {% else %}
              <span class="badge bg-secondary">Installed</span>

                      <form method="post" action="/admin/plugins/{{ plugin.name }}/enable">
                        {{ csrf() }}
                             <button class="btn btn-sm btn-primary float-end">
                            Enable
                        </button>
                    </form>
            {% endif %}
          {% else %}

{% if installed[plugin.slug] is not defined %}
    <form
        method="post"
        name="form-plugin-install"
        id="form-plug-install"
        action="{{url}}/admin/plugins/{{ plugin.slug }}/install"
        class="d-inline"
    >
        {{ csrf() }}
        <button class="btn btn-sm btn-primary">
            Install
        </button>
    </form>
{% endif %}

            </form>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}


{% block scripts %}
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="{{url}}/assets/js/multiform-ajax.js"></script>
{% endblock %}