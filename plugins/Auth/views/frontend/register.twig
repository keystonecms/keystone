{% extends "@core/auth/layout.twig" %}

{% block auth_content %}
<form id="register-form"
      method="post"
      action="/register"
      data-reload="false">

      {{ csrf() }}

    <p class="text-muted small text-center mb-3">
        Maak een nieuw account aan voor Keystone CMS.
    </p>

    <div class="mb-3">
        <label class="form-label">E-mail</label>
        <input
            type="email"
            name="email"
            class="form-control"
            required
            autocomplete="email"
        >
    </div>

        <button class="btn btn-primary w-100">
        Account aanmaken
    </button>

    <div class="text-center small mt-3">
        <a href="/login" class="link-secondary">
            Terug naar login
        </a>
    </div>
</form>
{% endblock %}


