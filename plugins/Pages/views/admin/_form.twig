{% extends "layouts/base.twig" %}

{% block content %}
<h1>{{ page ? 'Pagina bewerken' : 'Pagina aanmaken' }}</h1>

<form method="post" action="/admin/pages/save">
    {% if page %}
        <input type="hidden" name="id" value="{{ page.id }}">
    {% endif %}

    <div>
        <label>Titel</label>
        <input name="title" value="{{ page.title|default('') }}">
    </div>

    <div>
        <label>Slug</label>
        <input name="slug" value="{{ page.slug|default('') }}">
    </div>

    <div>
        <label>Content</label>
        <textarea name="content">{{ page.content|default('') }}</textarea>
    </div>

    <label>
        <input type="checkbox" name="published" {% if page.published %}checked{% endif %}>
        Gepubliceerd
    </label>

    <button type="submit">Opslaan</button>
</form>
{% endblock %}
