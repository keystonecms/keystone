{% extends '@core/admin/pages/layout.twig' %}

{% block title %}Rollen{% endblock %}

{% block content %}
<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Rollen</h1>
        <a href="{{url}}/admin/roles/create" class="btn btn-primary btn-sm">
            Nieuwe rol
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Naam</th>
                        <th>Beschrijving</th>
                        <th class="text-end">Acties</th>
                    </tr>
                </thead>
                <tbody>
                    {% for role in roles %}
                        <tr>
                            <td class="fw-semibold">{{ role.name }}</td>
                            <td class="text-muted">{{ role.label }}</td>
                            <td class="text-end">
                                <a href="{{ path('admin.roles.edit', {id: role.id}) }}"
                                   class="btn btn-sm btn-outline-secondary">
                                    Bewerken
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                Geen rollen gevonden
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}
