{% extends '@pages/admin/layout.twig' %}

{% block title %}Gebruikers{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1 class="h4 mb-3">Gebruikers</h1>

    <div class="alert alert-success d-none"></div>
    <div class="alert alert-danger d-none"></div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Status</th>
                <th>Rollen</th>
                <th>2FA</th>
            </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td>{{ u.email }}</td>
                <td>
                    <form
                        id="form-status-{{ u.id }}"
                        action="/admin/users/status"
                        method="post"
                    >
                        {{ csrf() }}
                        <input type="hidden" name="user_id" value="{{ u.id }}">

                        <select
                            name="status"
                            class="form-select form-select-sm"
                            onchange="this.form.requestSubmit()"
                        >
                            {% for s in ['pending','active','disabled'] %}
                                <option value="{{ s }}" {{ u.status == s ? 'selected' : '' }}>
                                    {{ s }}
                                </option>
                            {% endfor %}
                        </select>
                    </form>
                </td>
                <td>{{ u.roles|join(', ') }}</td>
                <td>
                    {% if u.hasTwoFactor %}
                        <span class="badge bg-success">Ja</span>
                    {% else %}
                        <span class="badge bg-secondary">Nee</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block scripts %}
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="{{url}}/assets/js/multiform-ajax.js"></script>
{% endblock %}