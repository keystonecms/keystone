{% extends '@core/admin/pages/layout.twig' %}

{% block title %}Fout {{ error.id }}{% endblock %}

{% block content %}
<div class="container-fluid py-4">

    <h1 class="h4 mb-3">
        Fout {{ error.id }}
        <small class="text-muted">{{ error.created_at|date('d-m-Y H:i') }}</small>
    </h1>

    
<div class="card shadow-sm mb-4">
    <div class="card-body">

        <div class="mb-4">
            <div class="fw-semibold mb-2">Melding</div>

            <div class="bg-warning-subtle border border-warning rounded p-3">
                {{ error.message | nl2br }}
            </div>
        </div>

        <p class="text-muted small">
            {{ error.exception_class }}<br>
            {{ error.file }} : {{ error.line }}
        </p>

        <hr>

        <p class="small text-muted">
            {{ error.method }} {{ error.request_uri }}
        </p>

        <details class="mt-3">
            <summary class="mb-2">Stacktrace</summary>
            <pre class="bg-light p-3 small">{{ error.trace }}</pre>
        </details>

    </div>
</div>

    <form method="post"
          action="{{ path('system.errors.resolve', {id: error.id}) }}">
      {{ csrf() }}
          <button class="btn btn-success">
            Markeer als opgelost
        </button>

        <a href="{{ path('system.errors.index') }}"
           class="btn btn-link">
            Terug
        </a>
    </form>

</div>
{% endblock %}
