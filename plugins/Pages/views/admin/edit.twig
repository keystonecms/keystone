{% extends 'admin/base_admin.twig' %}

{% block title %}Pagina bewerken{% endblock %}

{% block content %}
<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Pagina bewerken</h1>

        {% if page.status != 'published' %}
            <form method="post" action="/admin/pages/{{ page.id }}/publish">
                <button class="btn btn-success btn-sm">
                    Publiceren
                </button>
            </form>
        {% endif %}
    </div>

    <form method="post" action="/admin/pages/{{ page.id }}">
        {% include 'admin/pages/_form.twig' with {
            page: page,
            submit_label: 'Wijzigingen opslaan'
        } %}
    </form>

</div>
{% endblock %}
