{% extends 'auth/base_auth.twig' %}


{% block title %}Inloggen{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <div class="card mt-5">
                <div class="card-body">

                    <h1 class="h4 mb-4 text-center">
                        Keystone CMS
                    </h1>
{% if error %}
    <div class="alert alert-danger">
        Ongeldige inloggegevens
    </div>
{% endif %}


                    <form method="post" action="/login">
                       
                        {{ csrf() }}

                        <div class="mb-3">
                            <label class="form-label">E-mail</label>
                            <input type="email"
                                   name="email"
                                   class="form-control"
                                   required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Wachtwoord</label>
                            <input type="password"
                                   name="password"
                                   class="form-control"
                                   required>
                        </div>

                        <button class="btn btn-primary w-100">
                            Inloggen
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
